<!DOCTYPE html>
<html>
  <head>
    <title>Live Traffic Luzern</title>
    <meta charset="utf-8" />
    <style>
      html, body, #map {
        height: 100%;
        margin: 0;
        padding: 0;
      }
    </style>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAkxBoYQsuQAcJ4y8H6w7nG1IjTjwL8np0"></script>
    <script>
      function initMap() {
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 13,
          center: { lat: 47.0502, lng: 8.3093 },
          mapTypeId: 'roadmap'
        });

        var trafficLayer = new google.maps.TrafficLayer();
        trafficLayer.setMap(map);
      }
    </script>
  </head>
  <body onload="initMap()">
    <div id="map"></div>
  </body>
</html>
